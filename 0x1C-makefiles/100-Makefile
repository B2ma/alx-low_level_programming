# Make file for school executable
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -Wall -Werror -Wextra -pedantic $^ -o $@

%.o: %.c
	$(CC) -Wall -Werror -Wextra -pedantic -c $< -o $@

clean:
	rm -f *~ $(NAME)
oclean:
	rm -f $(OBJ)

fclean: oclean  clean

re: fclean all

