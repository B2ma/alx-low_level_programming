# Make file for school executable
CC = gcc
SRC = main.c school.c
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC)
	$(CC) -Wall -Werror -Wextra -pedantic $^ -o $@

clean:
	-$(RM) *~ $(NAME)

oclean:
	-$(RM) $(patsubst %.c,%.o,$(SRC))

fclean: oclean clean

re: fclean all

ifeq ($(wildcard m.h),)
$(error Header file m.h not found!)
endif

